.bianjidz {
    height: 190rpx;
    padding: 30rpx;
    border-top: 1rpx solid rgba(248, 248, 248, 100);
    align-items: flex-start;
    justify-content: flex-start;
}

.bianjidz .one, .bianjidz .two {
    align-items: center;
    justify-content: flex-start;
    width: 90%;
}

.title {
    margin-right: 30rpx;
    font-weight: bold;
    height: 45rpx;
    width: 50%;
}

.moren-view {
    color: white;
    background-color: #F6390D;
    height: 45rpx;
    margin-left: 50rpx;
    padding: 0 10rpx 0 10rpx;
}

.bianjidz .two {
    color: rgba(144, 144, 144, 100);
    font-size: 28rpx;
    margin: 25rpx 200rpx 30rpx 55rpx;
}

.bianjidz .two image{
    height: 41.6rpx;
    width: 41.6rpx;
    float:right;
}
.xz {
    background-color: rgba(246, 57, 13, 100);
    color: rgba(255, 255, 255, 100);
    border-radius: 50rpx;
    height: 80rpx;
    margin: 250rpx 50rpx 0 50rpx;
    padding: 20rpx 220rpx 0rpx 220rpx;
}